{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Unit Tests (Windows Debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/windows-msvc-debug/tests/unit_tests/unit_tests.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/out/build/windows-msvc-debug",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug TCP Server Lifecycle Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/windows-msvc-debug/tests/unit_tests/unit_tests.exe",
            "args": [
                "--gtest_filter=TcpServerLifeCycleTest.*"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/out/build/windows-msvc-debug",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Single TCP Server Test",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/windows-msvc-debug/tests/unit_tests/unit_tests.exe",
            "args": [
                "--gtest_filter=TcpConnectionTest.ClientToServerDataTransfer"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/out/build/windows-msvc-debug",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Run Template Example",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/windows-msvc-debug/templates_example.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/out/build/windows-msvc-debug",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Run SFINAE Example",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/windows-msvc-debug/examples/sfinae/sfinae.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/out/build/windows-msvc-debug",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug CMake Target",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "cwd": "${command:cmake.launchTargetDirectory}",
            "preLaunchTask": "CMake: build",
            "console": "integratedTerminal"
        }
    ]
}