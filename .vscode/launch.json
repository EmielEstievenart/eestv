{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests: all",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.buildDirectory}/bin/unit_tests.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.buildDirectory}",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Test: TCP Server Lifecycle ",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.buildDirectory}/bin/unit_tests.exe",
            "args": [
                "--gtest_filter=TcpServerLifeCycleTest.*"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Test: Single TCP Server ",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.buildDirectory}/bin/unit_tests.exe",
            "args": [
                "--gtest_filter=TcpConnectionTest.ClientToServerDataTransfer"
            ],
            "stopAtEntry": true,
            "cwd": "${command:cmake.buildDirectory}",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Example: Templates",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.buildDirectory}/bin/templates_example.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.buildDirectory}",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Example: SFINAE ",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.buildDirectory}/bin/sfinae.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.buildDirectory}",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug CMake Target",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "cwd": "${command:cmake.launchTargetDirectory}",
            "preLaunchTask": "CMake: build",
            "console": "integratedTerminal"
        },
        {
            "name": "Echo CMake Launch Target Directory",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:\\Windows\\System32\\cmd.exe",
            "args": [
                "/C",
                "echo ${command:cmake.buildDirectory} & pause"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        }
    ]
}